<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
      <div class="pmd-card card-default pmd-z-depth">
        <div class="login-card">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="pmd-card-title card-header-border text-center">
              <h2>Log in <span>to <strong class="text-primary">OMNILOGUE</strong></span></h2>
            </div>

            <div class="pmd-card-body">
              <div class="form-group pmd-textfield pmd-textfield-floating-label">
                <label for="inputError1" class="control-label pmd-input-group-label">Email</label>
                <div class="input-group">
                  <div class="input-group-addon"><%= fa_icon "envelope" %></div>
                  <%= f.email_field :email, autofocus: true, class: "form-control" %>
                </div>
              </div>

              <div class="form-group pmd-textfield pmd-textfield-floating-label">
                <label for="inputError1" class="control-label pmd-input-group-label">Password</label>
                <div class="input-group">
                  <div class="input-group-addon"><%= fa_icon "lock" %></div>
                  <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
                </div>
              </div>
            </div>
            <div class="pmd-card-footer card-footer-no-border card-footer-p16 text-center">
              <div class="form-group clearfix">
                <div class="checkbox pull-left">
                  <label class="pmd-checkbox checkbox-pmd-ripple-effect">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me, class: "pmd-checkbox" %>
                  </label>
                </div>
              </div>
              <%= f.submit "Log in", class: "btn pmd-ripple-effect btn-primary btn-block" %>
              <p class="redirection-link">Don't have an account? <%= render "users/shared/links" %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>